ALGORITMO "EX7"
	VAR
		X : INTEIRO
		VET1, VET2, SOMA : VETOR [1..10] DE INTEIRO
INICIO
	PARA X DE 1 ATE 10 FACA
			ESCREVAL ("DIGITE O NÚMERO DO 1º VETOR: ")
	         	LEIA (VET1[X])
			ESCREVAL ("DIGITE O NÚMERO DO 2º VETOR: ")
         		LEIA (VET2[X])
			SOMA[X] := VET1[X] + VET2[X]
			ESCREVAL ("SOMA: ", SOMA[X])
	FIMPARA
FIMALGORITMO
