ALGORITMO "EX3"
	VAR
		X : INTEIRO
		NOME : CARACTERE
		VETNOME : VETOR [1..5] DE CARACTERE
INICIO
	PARA X DE 1 ATE 5 FACA
		ESCREVAL ("DIGITE O NOME: ")
	      LEIA (VETNOME[X])
	FIMPARA
	ESCREVAL ("DIGITE O NOME A SER LOCALIZADO: ")
   	LEIA (NOME)
	PARA X DE 1 ATE 5 FACA
		SE NOME = VETNOME [X] ENTAO
			ESCREVAL ("O NOME ENCONTRA-SE NA POSIÇÃO: ", X)
			X := 5
		FIMSE
	FIMPARA
FIMALGORITMO
